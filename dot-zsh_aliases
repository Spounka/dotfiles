# bash aliases

# system commands fixes
# alias sudo='sudo '
alias ls="ls --group-directories-first --color=auto "
alias cp="cp -vi"
alias rm="rm -vi"
alias mv="mv -vi"

# system commands aliases
alias cls="clear"
alias ll="ls -al "

# abbreviations
alias dup='docker compose up '
alias dcd='docker compose down '


# personal scripts
alias pinger="pinger.sh"
alias clip="~/.scripts/clip.sh"
alias b="source ~/.scripts/back.sh"
alias screenshot="/home/spounka/.scripts/screenshot.sh"
alias nmsp="~/.scripts/wifi.sh Spounka"
alias nmaz="~/.scripts/wifi.sh D-AZZEDINE"
alias armorpaints="armorpaint"
alias emcl="~/.scripts/emcl.sh"

# Wine Stuff
alias w32="WINEARCH=win32 WINEDEBUG=-all WINEPREFIX=~/.local/share/wineprefixes/wine/ wine"
alias w64="WINEARCH=win64 WINEDEBUG=-all WINEPREFIX=~/.local/share/wineprefixes/wine64/ wine"
